{
  // Required
  "name": "V2EX Show Replies",
  "version": "0.2",
  "manifest_version": 2,

  // Recommended
  "description": "当鼠标在回复内容中的某个有链接的人名上时，会显示此人在此页的回复",
  // "icons": { ... },
  // "default_locale": "en",

  "background": {
      "scripts": ["background.js"]
    },

  "browser_action": {
      "default_icon": "favicon.ico"
    },

  "permissions": [
    "http://*.v2ex.com/"
  ],

  "content_scripts": [
    {
      "matches": ["http://*.v2ex.com/t/*"],
      "css": ["style.css"],
      "js": ["jquery.js", "v2ex_showReplies.js"]
    }
  ]
}